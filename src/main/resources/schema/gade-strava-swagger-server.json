{
	"swagger": "2.0",
	"info": {
		"title": "Strava API Wrapper",
		"description": "Wraps useful Strava API calls",
		"version": "0.0.1"
	},
	"host": "localhost",
	"schemes": [
		"http"
	],
	"basePath": "/api/wrapper",
	"produces": [
		"application/json"
	],
	"parameters": {
		"page": {
			"name": "page",
			"in": "query",
			"description": "Page number. Defaults to 1.",
			"type": "integer"
		},
		"perPage": {
			"name": "per_page",
			"in": "query",
			"description": "Number of items per page. Defaults to 30.",
			"type": "integer",
			"default": 30
		}
	},
	"paths": {
		"/activities": {
			"get": {
				"operationId": "getActivities",
				"summary": "List Activities",
				"description": "Returns the activities",
				"parameters": [
					{
						"name": "before",
						"in": "query",
						"description": "An epoch timestamp to use for filtering activities that have taken place before a certain time.",
						"type": "integer"
					},
					{
						"name": "after",
						"in": "query",
						"description": "An epoch timestamp to use for filtering activities that have taken place after a certain time.",
						"type": "integer"
					},
					{
						"$ref": "#/parameters/page"
					},
					{
						"$ref": "#/parameters/perPage"
					}
				],
				"tags": [
					"Activities"
				],
				"responses": {
					"200": {
						"description": "The authenticated athlete's activities",
						"schema": {
							"type": "array",
							"items": {
								"$ref": "sub-schema/activity.json#/SummaryActivity"
							}
						}
					}
				}
			}
		}
	}
}